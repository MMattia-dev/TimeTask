@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<link rel="stylesheet" href="~/css/site_form.css" asp-append-version="true" />

<style type="text/css">
    .right-nav {
        border-top-right-radius: 10px;
        border-top-left-radius: 10px;
        border-bottom-right-radius: 10px;
        border-bottom-left-radius: 10px;
    }
</style>

<div class="parent">
    @*<section class="left-nav">

    </section>*@

    <section class="right-nav">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group form-group-margin">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="e-mail" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn-custom">Reset password</button>
            </div>
            <div class="form-group">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn-custom_">Back</a>
            </div>
        </form>
    </section>
</div>

