@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/site_form.css" asp-append-version="true" />

<style type="text/css">
    .right-nav {
        border-top-right-radius: 10px;
        border-top-left-radius: 10px;
        border-bottom-right-radius: 10px;
        border-bottom-left-radius: 10px;
    }
</style>

<div class="parent">
    @*<section class="left-nav">

    </section>*@

    <section class="right-nav">
        <form id="account" method="post" class="form_2" style="display: none;">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <input asp-for="Input.Email" type="email" placeholder="e-mail" aria-required="true" autocomplete="username" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group form-group-margin">
                <input asp-for="Input.Password" type="password" placeholder="password" aria-required="true" autocomplete="current-password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>*@
            <div class="form-group form-group-margin">
                <button id="login-submit" type="button" class="btn-custom" onclick="logIn()">Log in</button>
                <button id="logInClick" type="submit"></button>
            </div>
            <div class="form-group form-group2">
                <a class="btn-custom_" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                <a class="btn-custom_" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">New user? Register.</a>
                @*<a class="btn-custom_" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation.</a>*@
            </div>

        </form>
    </section>
</div>


