@model IEnumerable<TimeTask.Models.Chat>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SenderUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessageText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessageSentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SentFileLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IfMessageRead)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SenderUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiverUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageSentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentFileLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IfMessageRead)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
